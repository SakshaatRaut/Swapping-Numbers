#include<stdio.h>

int primeno(int n);
int i;
int main()
{
	int n,n1;
	printf("Enter any positive number: ");
	scanf("%d",&n);
	i=n/2;
	n1 = primeno(n);
	
	if(n1==1)
	printf("\n The number %d is a prime number",n);
	else
	printf("\n The number %d is not a prime number",n);
	return 0; 
}

int primeno(int n)
{
	if(i==1)
	{
		return 1;
	}
	else if(n%i==0)
	{
		return 0;
	}
	else
	{
		i=i-1;
		primeno(n);
	}
}
